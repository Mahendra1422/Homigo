  .filter {
    margin-top: 1rem;
    opacity: 0.7;
    transition: 0.2s;
  }
  .filter:hover {
    opacity: 1;
    cursor: pointer;
    transform: scale(1.05);
  }
  .tax-info {
    display: none;
  }
</style>

