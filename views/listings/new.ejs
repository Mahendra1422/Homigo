<% layout('layouts/boilerplate') -%>
    <script>
        window.mapToken = "<%= process.env.MAP_TOKEN || '' %>";
        window.canEditListing = true; // User is creating new listing, so they can edit
    </script>

    <br><br>
    <div class="row mt-3">
        <div class="col-12">
            <h3 class="text-center">Create a New Listing</h3>
        </div>
    </div>
    
    <div class="row mt-3">
        <div class="col-lg-6">
            <form method="POST" action="/listings" class="needs-validation" novalidate
            enctype="multipart/form-data" id="new-listing-form">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input name="listing[title]" placeholder="Enter the title" type="text" class="form-control"
                        required>
                     <div class="valid-feedback">
                        Title Looks Good !!
                    </div>
                    <div class="invalid-feedback">
                        Please provide a title.
                    </div>
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" placeholder="Enter the description" class="form-control"
                        required></textarea>
                   
                    <div class="invalid-feedback">
                        Please provide a description.
                    </div>
                </div>


                <div class="mb-3">
                    <label for="image" class="form-label">Upload Image</label>
                    <input name="listing[image]" placeholder="Enter the image URL/link" type="file"
                        class="form-control" required>
                </div>



                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input name="listing[price]" placeholder="Enter the price"  min="0"
                            class="form-control" required>

                        <div class="invalid-feedback">
                            Please provide the price.
                        </div>
                    </div>

                    <div class="mb-3 col-md-8">
                        <label for="location" class="form-label">Location <small class="text-muted">(Start typing for suggestions)</small></label>
                        <input name="listing[location]" placeholder="Enter full address (e.g., 123 Main St, City, Country)" type="text"
                            class="form-control" required autocomplete="off">
                        <div class="invalid-feedback">
                            Please provide a valid location.
                        </div>
                        <div class="form-text">
                            <i class="fas fa-info-circle"></i> Address suggestions will appear as you type. Select one for accurate map placement.
                        </div>
                    </div>
                </div>


                <div class="mb-3">
                    <label for="country" class="form-label">Country</label>
                    <input name="listing[country]" placeholder="Enter the country" type="text" class="form-control"
                        required>
                    <div class="invalid-feedback">
                        Please provide Country Name.
                    </div>
                </div>


                <button class="btn btn-dark mt-3">ADD Listing</button>

                <br><br>
            </form>
        </div>
        
        <!-- Map Preview Column -->
        <div class="col-lg-6">
            <div class="sticky-top" style="top: 20px;">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fas fa-map-marked-alt"></i> Location Preview
                        </h5>
                    </div>
                    <div class="card-body p-0">
                        <div id="map" style="height:400px; width:100%;" 
                             data-lat="20.2960" 
                             data-lon="85.8246">
                        </div>
                    </div>
                    <div class="card-footer text-muted">
                        <div class="d-flex flex-column gap-1">
                            <small>
                                <i class="fas fa-keyboard text-primary"></i> 
                                <strong>Option 1:</strong> Type address above for autocomplete suggestions
                            </small>
                            <small>
                                <i class="fas fa-mouse-pointer text-success"></i> 
                                <strong>Option 2:</strong> Click anywhere on the map to drop a pin and set location
                            </small>
                            <small class="text-info">
                                <i class="fas fa-lightbulb"></i> 
                                <em>Tip: Drag the map to find your exact location, then click to place a pin</em>
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Include required scripts -->
    <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
    <script src="/js/map.js"></script>
    <script src="/js/address-autocomplete.js"></script>
